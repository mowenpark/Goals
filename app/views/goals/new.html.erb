<form action='<%=goals_url %>' method="post">
  <input type="hidden" name="authenticity_token" value='<%=form_authenticity_token%>'>
  <label for="title">Title</label>
  <input type="text" name="goal[title]" value='<%=@goal.title%>' id='title'>

  <label for="public">Public?</label>
  <input type="radio" name="goal[is_public]" value='yes' id='public'>Yes
  <input type="radio" name="goal[is_public]" value='no' id='public'>No

  <br>
  <input type="submit" value="Create Goal">
</form>
