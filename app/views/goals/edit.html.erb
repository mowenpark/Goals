<form action='<%=goal_url(@goal) %>' method="post">
   <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="authenticity_token" value='<%=form_authenticity_token%>'>
  <label for="title">Title</label>
  <input type="text" name="goal[title]" value='<%=@goal.title%>' id='title'>
  <br>
  <label for="public">Public?</label>
  <input type="radio" name="goal[is_public]" value='yes' id='public' <%= 'checked' if @goal.is_public == true %> >Yes
  <input type="radio" name="goal[is_public]" value='no' id='public' <%= 'checked' if @goal.is_public == false %> >No
  <br>
  <label for="completed">Completed?</label>
  <input type="radio" name="goal[completed]" value='yes' id='completed' <%= 'checked' if @goal.completed == true %> >Yes
  <input type="radio" name="goal[completed]" value='no' id='completed' <%= 'checked' if @goal.completed == false %> >No
  <br>
  <%= radio_button("user", "receive_newsletter", 1) %>Yes
  <%= radio_button("user", "receive_newsletter", 0) %>No
  <br>
  <input type="submit" value="Submit Edit">
</form>
